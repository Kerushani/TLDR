{
  "manifest_version": 3,
  "name": "TLDR",
  "version": "1.0",
  "description": "Summarizes articles using AI.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ]
}

  